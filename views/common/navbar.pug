      ul.navbar-nav.float-right
        if user
          span.navbar-text Konichiwa #{user.email}-san!
          li.nav-item
            a.nav-link(href="/logout") Logout
        else
          li.nav-item
            a.nav-link(href="/signup") Sign up
          li.nav-item
            a.nav-link(href='/login') Login
        li.nav-item.dropdown
          a.nav-link.dropdown-toggle(id='navbarDropdownMenuLink', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false') Accounts
            .dropdown-menu(aria-labelledby='navbarDropdownMenuLink', id="navbarDropdownMenuLink")
              a.dropdown-item(href='/login') Settings

